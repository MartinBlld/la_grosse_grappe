
  <div class="container">
    <div class="row">
     <div class="col-6 p-5" data-controller="price-count">
        <%= simple_form_for [@grapevine, @booking] do |f| %>
        <div data-target="price-count" data-action="change->price-count#updatePriceCounter">
        <%= f.input :years, collection: (1..@grapevine.rental_period), label: "Nombre d'année maximum pendant laquelle une parcelle est louée"  %>
        </div>
        <div data-target="price-count" data-action="change->price-count#updatePriceCounter">
        <%= f.input :parcel_quantity, collection: 1..@grapevine.parcel_stock , prompt: "Combien de part souhaitez vous louer" %>
        </div>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
      </div>
    <div class="col-6 p-5">
      <%= image_tag @grapevine.photo %>
     <div class="d-flex">
  <h3>Prix total:</h3>
  <div data-price-count-target="counter"></div>

</div>

</div>
    </div>
    </div>
  </div>
