<div class="p-3">
<h1 class="mt-2">Bienvenue dans la création de votre vigne !</h1>

<%= simple_form_for(@grapevine) do |f| %>

  <%= f.input :name, label: "Nom de la vigne" %>
  <%= f.input :grape_variety, label: "Variété de la vigne" %>
  <%= f.input :color, collection: ["Rouge", "Blanc", "Rosé"], label: "Couleur" %>
  <%= f.input :organic, label: "Biologique ?"%>
  <%= f.input :area, label: "Zone" %>
  <%= f.input :parcel_price , label: "Prix de la parcelle"%>
  <%= f.input :parcel_stock, label: "Parcelle disponible"%>
  <%= f.input :description, label: "Décrivez votre vignoble (rendement par hectare attendu, spécificité du vin que vous produisez)" %>
  <%= f.input :short_description , label: "Un court résumé impactant pour inciter les visiteurs à se renseigner (150 caractères max!)"%>
  <%= f.input :photo, as: :file %>

  <%= f.button :submit, "Créer ma vigne", class: "btn btn-primary"%>
<% end %>

<div class="mt-3">
<%= link_to "< Retour sur mon profil", user_session_path%>
</div>
</div>
