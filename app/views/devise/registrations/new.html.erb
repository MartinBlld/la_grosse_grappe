<h2>Se créer un compte</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Prénom" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Nom de famille" }%>
    <%= f.input :photo,
                required: false,
                as: :file%>
    <%= f.input :winemaker,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Vigneron" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "Nouveau mot de passe" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "Nouveau mot de passe" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "S'enregistrer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
